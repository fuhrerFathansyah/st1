<html lang="en">

  <head>
    <!-- Metadata -->
    <meta charset="UTF-8" />
    <!-- Pengaturan karakter dokumen -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Pengaturan tampilan responsif -->
    <title>Document</title>
    <!-- Judul halaman -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <style>
      body{ background: rgba(150, 150, 150, 0.1); } .btn-primary {
      background-color: #00ff40; color: white; border-color: #00ff40; }
      .btn-primary:hover { background-color: #000000; color: white;
      border-color: #000000; }
    </style>
  </head>

  <body>
    <!-- Navigasi -->
    <nav
      class="navbar navbar-expand-sm navbar-light bg-light"
      style="background-color: white;"
    >
      <div class="container">
        <!-- Logo -->
        <a class="navbar-brand" href="#">
          <img src="../assets/img/echd.png" alt="logo" style="width: 50px;" />
        </a>

        <!-- Navbar Toggle Button -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Tautan Navigasi -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="blog">My Project</a>
            </li>
          </ul>
        </div>
          {{#if isLogin}}
          <h3 >Halo, {{user.username}}</h3>
          <form action="/logout" method="POST">
            <button>Logout</button>
          </form>
          {{/if}}
        <!-- Tautan "Contact Me" -->
        <a class="nav-right btn btn-primary" href="contact">Contact Me</a>
      </div>
    </nav>

    <!-- Formulir untuk menambahkan blog -->
    <div class="container text-center my-5">
      {{#if isLogin}}
      <div class="d-flex justify-content-end">
        <a href="/add-blog" class="btn btn-primary">Add Post</a>
      </div>
      <hr class="line" style="margin-bottom: 50px;" />
      {{/if}}
      <div id="contents" class="blog-list"></div>
      {{#each data}}
        <div class="card d-flex flex-row">
          <img src="{{image}}" class="card-img-top w-25" alt="..." />
          <div class="card-body d-flex flex-column align-items-start">
            <div class="w-100 d-flex justify-content-end">
              <a href="/edit-blog/{{id}}" class="btn btn-primary mx-2">Edit Post</a>
              <form onsubmit="deletePost({{id}})" style="margin: 0;">
                <button class="btn btn-primary">Delete Post</button>
              </form>
            </div>
            <a
              href="/blog-detail/{{id}}"
              class="card-title fw-bold"
            >{{title}}</a>
            <p class="card-text">{{content}}</p>
            <div class="d-flex flex-row">
              <p class="card-text">Start Date: {{createdAt}}</p>
              <p class="card-text">End Date: {{updatedAt}}</p>
            </div>
            <div class="d-flex flex-row">
              <p class="card-text">Technologies: </p>
              <ul class="card-text">
                {{#if Node_JS}}
                  <li>Node JS</li>
                {{/if}}
                {{#if React_JS}}
                  <li>React JS</li>
                {{/if}}
                {{#if Next_JS}}
                  <li>Next JS</li>
                {{/if}}
                {{#if Typescript}}
                  <li>Typescript</li>
                {{/if}}
              </ul>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

    <!-- Menghubungkan file JavaScript eksternal 
    <script src="../assets/js/blog.js"></script>-->

    <!-- Menghubungkan file JavaScript Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <!-- <script src="../assets/js/blog-boostrap.js"></script> -->
    <script src="../assets/js/deletepost.js"></script>
  </body>

</html>